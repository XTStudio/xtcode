{
	"name": "xtcode",
	"displayName": "xtcode",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			}
		],
		"breakpoints": [
			{
				"language": "typescript"
			}
		],
		"debuggers": [
			{
				"type": "xt",
				"label": "XT",
				"runtime": "node",
				"program": "./out/debugger/debugAdapter.js",
				"configurationAttributes": {
					"launch": {
						"required": [],
						"properties": {
							"workspace": {
								"type": "string",
								"description": "Absolute path to workspace.",
								"default": "${workspaceFolder}"
							},
							"platform": {
								"type": "string",
								"description": "Target platform to launch.",
								"default": "ios"
							},
							"device": {
								"type": "string",
								"description": "Target device to launch."
							},
							"os": {
								"type": "string",
								"description": "Target device os version to launch."
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "xt",
						"request": "launch",
						"name": "Run XT Debug",
						"workspace": "${workspaceFolder}",
						"platform": "ios"
					}
				],
				"configurationSnippets": [
					{
						"label": "XT: Launch",
						"body": {
							"type": "xt",
							"request": "launch",
							"name": "Run XT Debug",
							"workspace": "${workspaceFolder}",
							"platform": "ios"
						}
					}
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {
		"vscode-debugadapter": "1.33.0"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	}
}